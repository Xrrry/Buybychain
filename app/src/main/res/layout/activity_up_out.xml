<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpOut">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/com_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_weight="30"
                app:met_baseColor="@color/black"
                app:met_primaryColor="#048A81"
                app:met_errorColor="#C63B34"
                app:met_floatingLabelTextSize="15sp"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText="商品id"
                android:hint="商品id"
                app:met_iconLeft="@drawable/my2"/>
            <Button
                android:id="@+id/scan_my"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/bt_shape3"
                android:layout_weight="1"
                android:text="扫一扫"
                android:textColor="#048A81"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/com_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="30"
                app:met_baseColor="@color/black"
                app:met_primaryColor="#048A81"
                app:met_errorColor="#C63B34"
                app:met_floatingLabelTextSize="15sp"
                app:met_floatingLabel="normal"
                app:met_floatingLabelText=  "名称"
                android:hint="名称"
                app:met_iconLeft="@drawable/comname"/>
            <Button
                android:id="@+id/choose"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bt_shape3"
                android:layout_weight="1"
                android:text="选择模板"
                android:textColor="#048A81"
                android:textSize="10sp"/>
        </LinearLayout>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/com_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:met_baseColor="@color/black"
            app:met_primaryColor="#048A81"
            app:met_errorColor="#C63B34"
            app:met_floatingLabelTextSize="15sp"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="种类"
            app:met_iconLeft="@drawable/my1"
            android:hint="种类" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/com_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:met_baseColor="@color/black"
            app:met_primaryColor="#048A81"
            app:met_errorColor="#C63B34"
            app:met_floatingLabelTextSize="15sp"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="价格"
            app:met_iconLeft="@drawable/price"
            android:hint="价格" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/com_locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:met_baseColor="@color/black"
            app:met_primaryColor="#048A81"
            app:met_errorColor="#C63B34"
            app:met_floatingLabelTextSize="15sp"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="产地"
            app:met_iconLeft="@drawable/my4"
            android:hint="产地" />

        <Button
            android:id="@+id/submit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:text="提   交"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bt_shape4"/>

    </LinearLayout>

</RelativeLayout>